# AI Life OS environment variables
# Copy to `.env` and adjust values for your local machine.

# --- Runtime server ---
AI_LIFE_OS_HOST=0.0.0.0
AI_LIFE_OS_PORT=8010
AI_LIFE_OS_RELOAD=0

# --- Runtime data isolation ---
# If unset, default is ./data
AI_LIFE_OS_DATA_DIR=

# --- CORS ---
# Comma-separated origins, e.g. http://localhost:5173,http://127.0.0.1:5173
# Use "*" only for local development.
AI_LIFE_OS_ALLOWED_ORIGINS=*

# --- Test/runtime watchers ---
# Set to 1 to disable background config watchers.
AI_LIFE_OS_DISABLE_WATCHERS=0

# --- Optional model/API keys ---
STRATEGIC_BRAIN_API_KEY=your-strategic-brain-api-key
CODING_HANDS_API_KEY=your-coding-hands-api-key
LONG_MEMORY_API_KEY=your-long-memory-api-key
COST_EFFICIENT_API_KEY=your-cost-efficient-api-key
